extends layout

block content
  h1= title
  br
  - var results = [{brand: "ktm",year: 2010,price:"1000"},{brand: "royal enfield",year: 2011,price:"1100"},{brand: "R15",year: 2012,price:"1200"}];
   div(class = "container-fluid")
    div(class = "row")
     each i,index in results
        div(class="col-sm-4" onclick=`buy(${index})`) brand: #{i.brand} 
        br
        br 
        div(class="col-sm-4" onclick=`buy(${index})`) year: #{i.year}
        br
        br  
        div(class="col-sm-4" onclick=`buy(${index})`) price: #{i.price}
        script.
                function buy(itemNo){
                    alert(`You purchased item ${itemNo+1}`)
                }